// Living Lands - Metabolism HUD (matching v2.6.0 style)
Group {
  LayoutMode: Top;
  Anchor: (Top: 16, Left: 16, Width: 165, Height: 280);

  // Metabolism bars with backdrop (tight padding like v2.6.0)
  Group #MetabolismBars {
    LayoutMode: Top;
    Anchor: (Width: 165, Height: 66);
    Background: #1a1a1a(0.70);
    Padding: (Full: 8);

    // Hunger row - label and bar aligned
    Group #HungerRow {
      LayoutMode: Left;
      Anchor: (Height: 16);

      Label #HungerName {
        Text: "Hunger";
        Anchor: (Width: 50, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e67e22, RenderBold: true);
      }

      Label #HungerBar {
        Text: "";
        Anchor: (Width: 115, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #e67e22);
      }
    }

    // Thirst row - label and bar aligned
    Group #ThirstRow {
      LayoutMode: Left;
      Anchor: (Height: 16, Top: 1);

      Label #ThirstName {
        Text: "Thirst";
        Anchor: (Width: 50, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #5dade2, RenderBold: true);
      }

      Label #ThirstBar {
        Text: "";
        Anchor: (Width: 115, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #5dade2);
      }
    }

    // Energy row - label and bar aligned
    Group #EnergyRow {
      LayoutMode: Left;
      Anchor: (Height: 16, Top: 1);

      Label #EnergyName {
        Text: "Energy";
        Anchor: (Width: 50, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #f4d03f, RenderBold: true);
      }

      Label #EnergyBar {
        Text: "";
        Anchor: (Width: 115, Height: 16);
        Style: (FontSize: 11, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #f4d03f);
      }
    }
  }

  // Active Effects section (buffs/debuffs) - each with individual backdrop
  // Containers are hidden by default, shown when there's content
  Group #ActiveEffects {
    LayoutMode: Top;
    Anchor: (Height: 162, Top: 4);

    // Buff 1 with backdrop (hidden by default)
    Group #Buff1Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16);
      Background: #2d1f4e(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Buff1 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #b388ff);
      }
    }

    // Buff 2 with backdrop (hidden by default)
    Group #Buff2Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16, Top: 2);
      Background: #2d1f4e(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Buff2 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #b388ff);
      }
    }

    // Buff 3 with backdrop (hidden by default)
    Group #Buff3Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16, Top: 2);
      Background: #2d1f4e(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Buff3 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #b388ff);
      }
    }

    // Debuff 1 with backdrop (hidden by default)
    Group #Debuff1Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16, Top: 2);
      Background: #4a1a1a(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Debuff1 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #ff6b6b);
      }
    }

    // Debuff 2 with backdrop (hidden by default)
    Group #Debuff2Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16, Top: 2);
      Background: #4a1a1a(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Debuff2 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #ff6b6b);
      }
    }

    // Debuff 3 with backdrop (hidden by default)
    Group #Debuff3Container {
      LayoutMode: Left;
      Anchor: (Width: 165, Height: 16, Top: 2);
      Background: #4a1a1a(0.75);
      Padding: (Left: 8, Right: 8);
      Visible: false;

      Label #Debuff3 {
        Text: "";
        Anchor: (Height: 16);
        Style: (FontSize: 10, HorizontalAlignment: Start, VerticalAlignment: Center, TextColor: #ff6b6b);
      }
    }
  }
}
