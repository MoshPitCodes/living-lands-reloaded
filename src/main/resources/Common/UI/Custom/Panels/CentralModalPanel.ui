// Central Modal Panel - Tabbed interface for module-specific content
// Follows unified HUD pattern from v1.4.x (single UI file approach)
// Reference: LivingLandsHud.ui, ClaimManagerPage.ui

// Tab button styles - transparent background so Group (#TabNBg) background shows through
// Active/inactive color is set dynamically on the #TabNBg Group element
@TabStyle = TextButtonStyle(
  Default: (Background: #ffffff(0.00), LabelStyle: (FontSize: 11, TextColor: #8899aa, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 11, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #000000(0.10), LabelStyle: (FontSize: 11, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center))
);

// Claims grid cell button style (transparent so Group background shows through)
@CellStyle = TextButtonStyle(
  Default: (Background: #ffffff(0.00)),
  Hovered: (Background: #ffffff(0.10)),
  Pressed: (Background: #000000(0.15))
);

// Action button styles
@ConfirmBtnStyle = TextButtonStyle(
  Default: (Background: #2d5a27, LabelStyle: (FontSize: 10, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3d7a37, LabelStyle: (FontSize: 10, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1d4a17, LabelStyle: (FontSize: 10, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@ClearBtnStyle = TextButtonStyle(
  Default: (Background: #4a4a4a, LabelStyle: (FontSize: 10, TextColor: #cccccc, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #5a5a5a, LabelStyle: (FontSize: 10, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #3a3a3a, LabelStyle: (FontSize: 10, TextColor: #cccccc, HorizontalAlignment: Center, VerticalAlignment: Center))
);

// Plot list item style - transparent background so Group (#PlotItemBgN) background shows through
@PlotItemStyle = TextButtonStyle(
  Default: (Background: #ffffff(0.00), LabelStyle: (FontSize: 10, TextColor: #cccccc, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Hovered: (Background: #ffffff(0.08), LabelStyle: (FontSize: 10, TextColor: #ffffff, HorizontalAlignment: Start, VerticalAlignment: Center)),
  Pressed: (Background: #000000(0.10), LabelStyle: (FontSize: 10, TextColor: #ffffff, HorizontalAlignment: Start, VerticalAlignment: Center))
);

// Plot management button styles
@RenameBtnStyle = TextButtonStyle(
  Default: (Background: #2a4a6a, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #3a5a7a, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #1a3a5a, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center))
);

@DeleteBtnStyle = TextButtonStyle(
  Default: (Background: #5a2727, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #7a3737, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #4a1717, LabelStyle: (FontSize: 9, RenderBold: true, TextColor: #ffffff, HorizontalAlignment: Center, VerticalAlignment: Center))
);

