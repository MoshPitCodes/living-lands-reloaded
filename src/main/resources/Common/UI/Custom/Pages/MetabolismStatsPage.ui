// Living Lands - Metabolism Stats Page
// Full-screen modal showing detailed metabolism information

Group {
    Anchor: (Width: 500, Height: 400);
    Background: #1a1a2e(0.95);
    LayoutMode: Top;
    Padding: (Full: 20);

    // Header
    Label #Title {
        Text: "Metabolism Statistics";
        Anchor: (Height: 40);
        Style: (FontSize: 24, TextColor: #ffffff, HorizontalAlignment: Center);
    }

    // Stats section
    Group #StatsSection {
        Anchor: (Height: 200);
        LayoutMode: Top;
        Padding: (Top: 10);

        // Hunger stat
        Group #HungerGroup {
            LayoutMode: Top;
            Anchor: (Height: 50);

            Group #HungerLabel {
                LayoutMode: Left;
                Anchor: (Height: 20);

                Label {
                    Text: "Hunger";
                    Anchor: (Width: 100);
                    Style: (FontSize: 14, TextColor: #e67e22, RenderBold: true);
                }

                Label #HungerValue {
                    Text: "100 / 100";
                    FlexWeight: 1;
                    Style: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: End);
                }
            }
        }

        // Thirst stat
        Group #ThirstGroup {
            LayoutMode: Top;
            Anchor: (Height: 50, Top: 10);

            Group #ThirstLabel {
                LayoutMode: Left;
                Anchor: (Height: 20);

                Label {
                    Text: "Thirst";
                    Anchor: (Width: 100);
                    Style: (FontSize: 14, TextColor: #5dade2, RenderBold: true);
                }

                Label #ThirstValue {
                    Text: "100 / 100";
                    FlexWeight: 1;
                    Style: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: End);
                }
            }
        }

        // Energy stat
        Group #EnergyGroup {
            LayoutMode: Top;
            Anchor: (Height: 50, Top: 10);

            Group #EnergyLabel {
                LayoutMode: Left;
                Anchor: (Height: 20);

                Label {
                    Text: "Energy";
                    Anchor: (Width: 100);
                    Style: (FontSize: 14, TextColor: #f4d03f, RenderBold: true);
                }

                Label #EnergyValue {
                    Text: "100 / 100";
                    FlexWeight: 1;
                    Style: (FontSize: 14, TextColor: #ffffff, HorizontalAlignment: End);
                }
            }
        }
    }

    // Effects section (two columns)
    Group #EffectsSection {
        LayoutMode: Left;
        Anchor: (Height: 100, Top: 10);

        // Buffs column
        Group #BuffsColumn {
            FlexWeight: 1;
            LayoutMode: Top;
            Background: #2d1f4e(0.7);
            Padding: (Full: 10);

            Label {
                Text: "Active Buffs";
                Anchor: (Height: 20);
                Style: (FontSize: 12, TextColor: #b388ff, RenderBold: true);
            }

            Label #BuffsList {
                Text: "None";
                FlexWeight: 1;
                Style: (FontSize: 11, TextColor: #d0d0d0);
            }
        }

        // Debuffs column
        Group #DebuffsColumn {
            FlexWeight: 1;
            LayoutMode: Top;
            Background: #4a1a1a(0.7);
            Padding: (Full: 10);

            Label {
                Text: "Active Debuffs";
                Anchor: (Height: 20);
                Style: (FontSize: 12, TextColor: #ff6b6b, RenderBold: true);
            }

            Label #DebuffsList {
                Text: "None";
                FlexWeight: 1;
                Style: (FontSize: 11, TextColor: #d0d0d0);
            }
        }
    }

    // Footer with ESC hint
    Label #Footer {
        Text: "Press ESC to close";
        Anchor: (Height: 20, Top: 10);
        Style: (FontSize: 10, TextColor: #888888, HorizontalAlignment: Center);
    }
}
